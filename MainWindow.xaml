<Window x:Class="WindowProjects.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsProgramming"
        mc:Ignorable="d"
        Title="BatchReName" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Control.Resources>
        <local:WidthFourConverter x:Key="widthFourConverter" />
        <local:HeightConverter x:Key="heightConverter" />
    </Control.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <ToolBarTray>
                <ToolBar Height="30">
                    <Button Content="Refresh"></Button>
                    <Separator/>
                    <Button Content="Help"></Button>
                    <Separator/>
                    <Button Content="Start Batch"></Button>
                </ToolBar>
            </ToolBarTray>
        </StackPanel>
        <Grid Width="250" DockPanel.Dock="Left">
            <DockPanel>
                <ToolBar DockPanel.Dock="Top" Height="30">
                    <Menu>
                        <MenuItem Header="Add Method">
                            <MenuItem Header="New Case"/>
                            <MenuItem Header="Remove pattern"/>
                            <MenuItem Header="Replace"/>
                            <MenuItem Header="Trim"/>
                            <MenuItem Header="Move"/>
                            <MenuItem Header="New Name"/>
                        </MenuItem>
                    </Menu>
                    <Separator/>
                    <Button Content="Clear"></Button>
                    <Separator/>
                </ToolBar>

                <ToolBar DockPanel.Dock="Top" Height="30">
                    <Button Content="Refresh"></Button>
                    <Separator/>
                    <Button Content="Presets"></Button>
                    <ComboBox Width="125"></ComboBox>
                </ToolBar>
                <ListView Margin="5">

                </ListView>
            </DockPanel>
        </Grid>
        <Grid>
            <TabControl DockPanel.Dock="Right">
                <TabItem Header="Rename Files">
                    
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                            <ToolBarTray>
                                <ToolBar>
                                    <Border Width="60" Height="25" CornerRadius="10">

                                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Content="Add"
         Background="Transparent" FontSize="14" Width="60" Height="25" BorderBrush="Transparent" BorderThickness="1" Click="Add_File_Clicked" Margin="0,2,0,-2">
                                        </Button>
                                    </Border>
                                </ToolBar>
                            </ToolBarTray>
                        </StackPanel>
                        <ListView Name="FilePathListBinding" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Height" Value="{Binding ElementName=FilePathListBinding, Path=ActualHeight, Converter={StaticResource heightConverter}}" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            
                            <ListView.View>
                                
                                <GridView x:Name="gridView">
                                    <GridView.Columns>
                                        <GridViewColumn Width="{Binding ElementName=FilePathListBinding, Path=ActualWidth, Converter={StaticResource widthFourConverter}}"
                                            Header="Filename" DisplayMemberBinding="{Binding fileName}"></GridViewColumn>
                                        <GridViewColumn Width="{Binding ElementName=FilePathListBinding, Path=ActualWidth, Converter={StaticResource widthFourConverter}}"
                                            Header="New Name"></GridViewColumn>
                                        <GridViewColumn Width="{Binding ElementName=FilePathListBinding, Path=ActualWidth, Converter={StaticResource widthFourConverter}}"
                                            Header="Path" DisplayMemberBinding="{Binding filePath}"></GridViewColumn>
                                        <GridViewColumn Width="Auto" Header="Error">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Label Content="None" Foreground="Red"></Label>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView.Columns>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </DockPanel>
                </TabItem>
                <TabItem Header="Rename Folders">
                    <DockPanel>
                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                            <ToolBarTray>
                                <ToolBar>
                                    <Border Width="60" Height="25" CornerRadius="10">

                                        <Button Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Content="Add"
         Background="Transparent" FontSize="14" Width="60" Height="25" BorderBrush="Transparent" BorderThickness="1" Click="Add_Folder_Clicked" Margin="0,2,0,-2">
                                        </Button>
                                    </Border>
                                </ToolBar>
                            </ToolBarTray>
                        </StackPanel>
                        <ListView Name="FolderListBinding" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Height" Value="{Binding ElementName=FolderListBinding, Path=ActualHeight, Converter={StaticResource heightConverter}}" />
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.View>
                                <GridView>
                                    <GridView.Columns>
                                        <GridViewColumn Width="{Binding ElementName=FolderListBinding, Path=ActualWidth, Converter={StaticResource widthFourConverter}}"
                                            Header="Folder" DisplayMemberBinding="{Binding folderName}"></GridViewColumn>
                                        <GridViewColumn Width="{Binding ElementName=FolderListBinding, Path=ActualWidth, Converter={StaticResource widthFourConverter}}"
                                            Header="New Name" DisplayMemberBinding="{Binding newName}"></GridViewColumn>
                                        <GridViewColumn Width="{Binding ElementName=FolderListBinding, Path=ActualWidth, Converter={StaticResource widthFourConverter}}"
                                            Header="Parent path" DisplayMemberBinding="{Binding parent}"></GridViewColumn>
                                        <GridViewColumn Width="Auto" Header="Error">
                                            <GridViewColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Label Content="None" Foreground="Red"></Label>
                                                </DataTemplate>
                                            </GridViewColumn.CellTemplate>
                                        </GridViewColumn>
                                    </GridView.Columns>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </DockPanel>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>