<Window x:Class="WindowsProgamming.DetailUpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsProgamming"
        xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
        mc:Ignorable="d"
        Title="DetailUpdateWindow" x:Name="UpdateWindow" Height="160" Width="325" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DataTemplate x:Key="NewCaseDetailTemplate">
            <Canvas>
                <Label Content="Style:" FontSize="16" Canvas.Left="5" Canvas.Top="5"></Label>
                <StackPanel Canvas.Left="50" Width="250">
                    <ComboBox ItemsSource="{Binding Style}" FontSize="16" Margin="5" SelectionChanged="StyleSelection_Changed"/>
                </StackPanel>
                </Canvas>
        </DataTemplate>

        <DataTemplate x:Key="ReplaceDetailTemplate">
            <Canvas>
                <Label Content="Replace:" FontSize="16" Canvas.Left="5" Canvas.Top="5"></Label>
                <Label Content="With:" FontSize="16" Canvas.Left="5" Canvas.Top="45" ></Label>

                <StackPanel Canvas.Left="80">
                    <TextBox Text="{Binding Target, diag:PresentationTraceSources.TraceLevel=High}" FontSize="16" Height="40" Width="200" Margin="0, 0, 0, 5"
                             VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
                    <TextBox Text="{Binding Replacer, diag:PresentationTraceSources.TraceLevel=High}" FontSize="16" Height="40" Width="200" Margin="0, 0, 0, 5"
                             VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
                </StackPanel>
            </Canvas>
        </DataTemplate>

        <DataTemplate x:Key="MoveDetailTemplate">
            <Canvas>
                <Label Content="From:" FontSize="16" Canvas.Left="5" Canvas.Top="5"></Label>
                <Label Content="Length:" FontSize="16" Canvas.Left="150" Canvas.Top="5"></Label>
                <Label Content="Move to:" FontSize="16" Canvas.Left="5" Canvas.Top="45" ></Label>

                <TextBox Text="{Binding FromPos}" FontSize="16" Height="40" Width="60" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Canvas.Left="80"/>
                <TextBox Text="{Binding Length}" FontSize="16" Height="40" Width="60" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Canvas.Left="220"/>
                <TextBox Text="{Binding ToPos}" FontSize="16" Height="40" Width="60" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" Canvas.Left="80" Canvas.Top="45"/>
            </Canvas>
        </DataTemplate>

        <DataTemplate x:Key="RemovePatternDetailTemplate">
            <Canvas>
                <Label Content="Remove:" FontSize="16" Canvas.Left="5" Canvas.Top="5"></Label>
                <StackPanel Canvas.Left="80">
                    <TextBox Text="{Binding Pattern}" FontSize="16" Height="40" Width="200" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
                </StackPanel>
            </Canvas>
        </DataTemplate>

        <DataTemplate x:Key="TrimDetailTemplate">
            <Canvas>
                <Label Content="Trim characters: " FontSize="13" Canvas.Left="5" Canvas.Top="5"></Label>

                <StackPanel Canvas.Left="120">
                    <TextBox Text="{Binding trimChars}" FontSize="16" Height="40" Width="150" Margin="0, 0, 0, 5" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
                </StackPanel>
            </Canvas>
        </DataTemplate>

        <DataTemplate x:Key="NewNameDetailTemplate">
            <Canvas>
                <Label Content="New name:" FontSize="16" Canvas.Left="5" Canvas.Top="5"></Label>
                <StackPanel Canvas.Left="100">
                    <TextBox Text="{Binding NewName}" FontSize="16" Height="40" Width="180" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
                </StackPanel>
            </Canvas>
        </DataTemplate>
    </Window.Resources>
    <Canvas>
        <ContentControl Name="contentCtrl" Content="{Binding}" ContentTemplateSelector="{StaticResource myDetailTemplateSelector}" Canvas.Left="5" Canvas.Top="5" Width="300"/>
        <Button Name="okButton" IsDefault="True" Click="OkButton_Click" Content="Apply" Width="50" Height="25" Canvas.Left="171" Canvas.Top="94"/>
        <Button Name="cancelButton" IsCancel="True" Content="Cancel" Width="50" Height="25" Canvas.Left="235" Canvas.Top="94" RenderTransformOrigin="0.526,0.03"/>
    </Canvas>
</Window>
